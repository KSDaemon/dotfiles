#!/usr/bin/env sh
#
# `dot-install` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

# Set OS X defaults
$DOTFILES_ROOT/osx/set-defaults.sh

# Install homebrew
$DOTFILES_ROOT/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $DOTFILES_ROOT/script/install"
$DOTFILES_ROOT/script/install
